public class Number3
{
	public static void main(String[] args)
	{
		long x = (600851475143L) ;
		int a = 2;
		int max = 1;
		while (a < x)
		{
			if (x % a != 0)
			{
				a++;
			}
			if (x % a == 0)
			{
				int divisor = 2;
				while (a % divisor != 0)
					{	
						if (a == divisor + 1)
						{
							System.out.println(a);
							if (a >= max)
							{
								max = a;
							}
						}
						divisor++;
					}
					divisor = 2;
					a++;
			}
		}
		System.out.print("The answer to Project Euler #3 is " + max);
	}
}
	
