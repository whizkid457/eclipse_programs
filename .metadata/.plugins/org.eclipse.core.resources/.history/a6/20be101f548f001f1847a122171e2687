public class Number14
{
	public static void main(String[] args)
	{		
		int counter = 0;
		int number = 0;
		int max = 0;	
		int starting = 3;
		while (starting < 100)
		{
			number = starting;
			while (number > 0)
			{
				if (number % 2 == 0)
				{
					number = (int) ((1 * number)/2);
					counter++;
				}
				if (number % 2 == 1)
				{
					number = (3 * number) + 1;
					counter++;
				}			
				if (number == 1)
				{
					break;
				}
			}
			System.out.println(starting + " has a chain of " +  counter);
			if (counter > max)
			{
				max = counter;
			}
			counter = 0;
			starting++;	
		}
		System.out.println("The answer to Project Euler #14 is " + max);
	}
}
