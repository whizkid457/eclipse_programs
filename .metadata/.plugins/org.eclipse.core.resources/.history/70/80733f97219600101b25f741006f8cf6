public class Number14 
{
	public static void main(String[] args)
	{
		int number = 1, counter = 0, max = 0;
		while (true)
		{
			while (number < 1000000)
			{
				if (number % 2 == 0)
				{
					number/=2;
					counter++;
				}
				else
				{
					number = (3 * number) + 1;
					counter++;
				}
			}
			if (number > 1000000) break;
			if (counter > max) max = counter;
			counter = 0;
			number++;
		}
		System.out.println(max);
		

	}

}
