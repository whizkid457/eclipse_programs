public class Number14 
{
	public static void main(String[] args)
	{
		int number = 5, counter = 0, max = 0, max_num = 0;
		int num1 = number;
		while (true)
		{
			//System.out.print(number + ": ");
			num1 = number;
			while (num1 <= 1000000)
			{
				//System.out.print(" " + num1);
				if (num1 == 1) break;
				if (num1 % 2 == 0)
				{
					num1 = num1/2;
					counter++;
				}
				else if (num1 % 2 == 1)
				{
					num1 = (3 * num1) + 1;
					counter++;
				}
			}
			if (number > 1000000) break;
			if (counter > max)
			{
				max = counter;
				max_num = number;
			}
			counter = 0;
			number++;
			//System.out.println();
		}
		System.out.println(max_num);
	}
	
}
