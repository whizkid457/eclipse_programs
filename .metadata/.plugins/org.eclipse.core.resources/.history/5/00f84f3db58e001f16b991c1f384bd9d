public class Number12
{
	public static void main(String[] args)
	{
		int number = 76576100;
		int b = 0;
		int divisor = 2;
		int counter = 2;
		while (number < 100000000)
		{
			b = (number * (number + 1))/2;
			if (b % divisor == 0)
			{
				counter++;
				divisor++;
			}
			if (b % divisor != 0)
			{
				divisor++;
			}
			if (b == divisor)
			{
				if (counter > 500)
				{
					System.out.println("The answer to Project Euler #12 is " + b);
					break;
				}			
				counter = 2;
				number++;
				divisor = 2;
			}
		}
	}
}
