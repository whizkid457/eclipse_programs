import java.io.*;
import java.util.*;
public class LineNumberer
{
	public static void main(String[] args) 
		throws IOException
	{
		//Scanner console = new Scanner(System.in);
		//System.out.print("Input file: ");
		String input = "C:\\Documents and Settings\\Sameet\\My Documents\\Downloads\\names.txt";
		//System.out.print("Output file: ");
		String output = "C:\\Documents and Settings\\Sameet\\My Documents\\Downloads\\triangle.txt";
		FileReader file = new FileReader(input);
		Scanner in = new Scanner(file);
		PrintWriter fil = new PrintWriter(output);
		//Scanner out = new Scanner(output);
		int lineNumber = 1;
		while (in.hasNextLine())
		{
			String line = in.nextLine();
			fil.println("/*" + lineNumber + " */ " + line);
			lineNumber++;
		}
		fil.close();
		file.close();
	}
}
