public class Number14 
{
	public static void main(String[] args)
	{
		int number = 13, counter = 0, max = 0;
		while (true)
		{
			System.out.print(number + ": ");
			while (number <= 1000)
			{
				System.out.print(" " + number);
				if (number % 2 == 0)
				{
					number = number/2;
					counter++;
				}
				if (number == 1) break;
				else if (number % 2 == 1)
				{
					number = (3 * number) + 1;
					counter++;
				}
			}
			if (number > 1000000) break;
			if (counter > max)
			{
				max = counter; 
				//System.out.println(max);
			}
			counter = 0;
			number++;
			System.out.println();
		}
		//System.out.println(max);
		

	}

}
